<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favorites_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:rowCount="5"
    android:columnCount="3">
    <ImageView
        android:padding="20dp"
        android:layout_width="0dp"
        android:background="@drawable/border"
        android:layout_height="0dp"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:layout_column="2"
        android:src="@drawable/open_chk"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <ImageView
        android:padding="20dp"
        android:layout_width="0dp"
        android:background="@drawable/border"
        android:layout_height="0dp"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:layout_column="2"
        android:src="@drawable/live_view"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:background="@drawable/border"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_column="2"
        android:src="@drawable/cookcool"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_gravity="fill"
        android:background="@drawable/border"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:src="@drawable/traintopic_w"
        android:layout_rowWeight="1"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="fill"
        android:background="@drawable/border"
        android:padding="20dp"
        android:layout_row="3"
        android:layout_column="1"
        android:src="@drawable/allergens_icon"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:background="@drawable/border"
        android:padding="20dp"
        android:layout_column="2"
        android:src="@drawable/dleivery"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        android:layout_gravity="fill"
        android:layout_row="4"
        android:padding="20dp"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:src="@drawable/management"
        android:layout_rowWeight="1"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        android:layout_gravity="fill"
        android:padding="20dp"
        android:layout_row="4"
        android:layout_column="1"
        android:src="@drawable/occurrences"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <ImageView
        android:layout_width="0dp"
        android:background="@drawable/border"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_gravity="fill"
        android:layout_row="4"
        android:layout_column="2"
        android:src="@drawable/helphome"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
</GridLayout>